<p id=”alert”><%= alert %></p>

<div class="login-text">
  <h1>Login</h1>
</div>

<%= form_tag sessions_path do |form| %>
  
  <div class="form-group">
    <div class=”field”>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
      
    <div class=”field”>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class=”actions”>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= submit_tag "Login" %></p>
  </div>
  
<% end %>

<h3>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; OR </h3>

<div class=btn-group-vertical >
  <button type="button" class="btn btn-dark "><%= link_to 'Signin via Google', '/auth/google_oauth2' %></button><br />
  <button type="button" class="btn btn-dark "><%= link_to 'Signin via Facebook', '/auth/facebook' %></button><br />
  <button type="button" class="btn btn-dark "><%= link_to 'Signin via Github', '/auth/github' %></button>
</div>